{
  "lexicon": 1,
  "id": "at.margin.profile",
  "defs": {
    "main": {
      "type": "record",
      "description": "A profile for a user on the Margin network.",
      "key": "literal:self",
      "record": {
        "type": "object",
        "required": ["createdAt"],
        "properties": {
          "displayName": {
            "type": "string",
            "maxLength": 640,
            "description": "Display name for the user."
          },
          "avatar": {
            "type": "blob",
            "accept": ["image/png", "image/jpeg"],
            "maxSize": 1000000,
            "description": "User avatar image."
          },
          "bio": {
            "type": "string",
            "maxLength": 5000,
            "description": "User biography or description."
          },
          "website": {
            "type": "string",
            "maxLength": 1000,
            "description": "User website URL."
          },
          "links": {
            "type": "array",
            "description": "List of other relevant links (e.g. GitHub, Bluesky, etc).",
            "items": {
              "type": "string",
              "maxLength": 1000
            },
            "maxLength": 20
          },
          "createdAt": {
            "type": "string",
            "format": "datetime"
          }
        }
      }
    }
  }
}
