{
  "lexicon": 1,
  "id": "at.margin.profile",
  "defs": {
    "main": {
      "type": "record",
      "description": "A profile for a user on the Margin network.",
      "key": "literal:self",
      "record": {
        "type": "object",
        "required": ["createdAt"],
        "properties": {
          "bio": {
            "type": "string",
            "maxLength": 5000,
            "description": "User biography or description."
          },
          "website": {
            "type": "string",
            "maxLength": 1000,
            "description": "User website URL."
          },
          "links": {
            "type": "array",
            "description": "List of other relevant links (e.g. GitHub, Bluesky, etc).",
            "items": {
              "type": "string",
              "maxLength": 1000
            },
            "maxLength": 20
          },
          "createdAt": {
            "type": "string",
            "format": "datetime"
          }
        }
      }
    }
  }
}
